<body>
  <div class="main-content">
    <h1>Welcome to Airbnb</h1>
  </div>

  <main class="container">
    <h2>Here are our  registered homes :</h2>
    
    <ul class="homes-list">
      <% registeredhome.forEach(home => { %>
        <li class="home-card">
          <!-- Home Image with fallback -->
          <img 
            src="<%= home.photourl %>" 
            alt="Home Image"
            class="home-img">

          <!-- Home Details -->
          <p class="home-name"><%= home.name %> 
         <b><%= home.rating %>‚≠ê</b></p>
          <p><strong>Address:</strong> <%= home.address %></p>
          <p  class="bg-red-900"><strong> <%= home.price %>/night</strong></p>
           <a href="/homes/<%= home._id %>?favorite=false" class="bg-blue-800 p-4 space-x-3 home-link">
                View Details
                </a>
               
          <!-- <%- include("../partials/favorite.ejs",{home:home}) %> -->
           <button>Book</button>

        </li>
      <% }) %>
      
    </ul>
  </main>
</body>
</html>
